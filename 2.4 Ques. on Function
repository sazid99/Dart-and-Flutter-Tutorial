ans. 3: 

import 'dart:io';

void main() {
  evenOrOdd();
}

void evenOrOdd() {
  String? input = stdin.readLineSync();
  int number = int.parse(input!);
  var result = (number % 2 == 0) ? "$number is Even" : "$number is Odd";
  print(result);
}

